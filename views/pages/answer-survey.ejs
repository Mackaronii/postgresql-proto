<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/header.ejs") %>
  </head>

  <body>
    <%- include ("../partials/nav.ejs") %>

    <div class="container">
      <h2><%= data.survey.surveyname %></h2>
      <% if (data.survey.isopen) { %>
      <form method="POST">
        <% data.questions.forEach(function(row) { %>
        <hr />
        <% if (row.questiontype === 'open-ended') { %> <%-
        include("../partials/open-ended.ejs", {question: row}) %> <% } else if
        (row.questiontype === 'number-range') { %> <%-
        include("../partials/number-range.ejs", {question: row}) %> <% } else
        {%> <%- include("../partials/multiple-choice.ejs", {question: row}) %>
        <% }}); %>
        <hr />
        <button type="submit" class="btn btn-primary">Submit Answers</button>
      </form>
      <% } else { %>
      <p>This survey is closed.</p>
      <% }; %>
    </div>
  </body>
</html>
